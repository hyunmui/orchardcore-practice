<div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden border border-gray-100">
    {% if Model.LogoUrl != '' %}
    <div class="bg-gray-50 p-6 flex justify-center">
        <img src="{{ Model.LogoUrl }}" alt="{{ Model.CompanyName }} 로고"
             class="h-20 object-contain" />
    </div>
    {% endif %}
    <div class="p-6">
        {% if Model.Category != '' %}
        <span class="inline-block bg-blue-100 text-blue-700 text-xs font-semibold px-3 py-1 rounded-full mb-3">
            {{ Model.Category }}
        </span>
        {% endif %}
        <h3 class="text-xl font-bold text-gray-900 mb-3">{{ Model.CompanyName }}</h3>
        {% if Model.Description != '' %}
        <p class="text-gray-600 text-sm leading-relaxed mb-4">{{ Model.Description }}</p>
        {% endif %}
        {% if Model.WebsiteUrl != '' %}
        <a href="{{ Model.WebsiteUrl }}" target="_blank" rel="noopener noreferrer"
            class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium text-sm transition-colors">
            <i class="fas fa-external-link-alt mr-2"></i>웹사이트 방문
        </a>
        {% endif %}
    </div>
</div>
