<section class="py-12">
    <div class="container mx-auto px-4">
        <div class="space-y-4">
            {% for item in Model.Items %}
            <div class="flex flex-col md:flex-row bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-md transition-shadow">
                <div class="bg-blue-600 text-white p-6 md:w-48 flex flex-col justify-center items-center text-center shrink-0">
                    <div class="text-sm font-medium opacity-80">{{ item.StartTime | date: "%m/%d" }}</div>
                    <div class="text-2xl font-bold mt-1">{{ item.StartTime | date: "%H:%M" }}</div>
                    <div class="text-sm opacity-70 mt-1">~ {{ item.EndTime | date: "%H:%M" }}</div>
                </div>
                <div class="p-6 flex-1">
                    <h3 class="text-lg font-bold text-gray-900 mb-2">{{ item.Title }}</h3>
                    {% if item.Speaker != '' %}
                    <p class="text-blue-600 text-sm font-medium mb-2">
                        <i class="fas fa-user mr-1"></i>{{ item.Speaker }}
                    </p>
                    {% endif %}
                    {% if item.Location != '' %}
                    <p class="text-gray-500 text-sm mb-2">
                        <i class="fas fa-map-marker-alt mr-1"></i>{{ item.Location }}
                    </p>
                    {% endif %}
                    {% if item.Description != '' %}
                    <p class="text-gray-600 text-sm leading-relaxed">{{ item.Description }}</p>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
